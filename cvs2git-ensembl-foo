#! /bin/sh

# Written using Git 1.7.2.3, may work with older
#
# Recommend running like
#    TMPDIR=/dev/shm ./git-importing/cvs2git-ensembl-foo ensembl-otter

PROJ=${1:-ensembl-foo}
CANONPFX=ENSCOPY-

IEC_NAME=$PROJ

GIDIR=$(
    cd $( dirname $0 )
    echo $PWD
)
export PATH=$GIDIR:$PATH

# Import functions
source $GIDIR/cvs2git-funcs

unpack_hwime "${CVS2GIT_SQUIRREL_DIR}/${PROJ}.repo.tgz" || fetchrepo
canon_repocvs $CANONPFX$( echo $PROJ | tr a-z A-Z )
subdir_promote

unpack_hwime "${CVS2GIT_SQUIRREL_DIR}/${PROJ}.git.tgz"  || do_import

checktags_all

clean_git_namespace
clean_git_workingcopy

checktag_show_summary
